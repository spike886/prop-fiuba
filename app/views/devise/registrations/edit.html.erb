<div class="container" id="login-block">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
      <div class="page-icon-shadow animated bounceInDown"> </div>
      <div class="login-box clearfix animated flipInY">
        <div class="page-icon animated bounceInDown">
          <i class="glyphicon glyphicon-pencil"></i>
        </div>
        <div class="login-logo">
          <%= link_to image_tag("logo-white.png"), root_path %>
        </div>
        <hr>
        <div class="login-form">
          <div class="alert alert-danger hide">
            <button type="button" class="close" data-dismiss="alert"> ×</button>
            <h4>Error!</h4>
            <%= devise_error_messages! %>
          </div>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
      <%= f.text_field :name, :autofocus => true, class: 'input-field', placeholder: "Nombre", required: ""  %>
      <%= f.email_field :email, class: 'input-field', placeholder: "Correo electronico", required: ""  %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Esperando que confirme el correo electronico: <%= resource.unconfirmed_email %></p>
      <% end %>
      <hr/>
      <p>Deje estos campos en blanco si no desea cambiar su contraseña.</p>
        <%= f.password_field :password, :autocomplete => 'off', class: 'input-field', placeholder: "Nueva contraseña", required: ""  %>
        <%= f.password_field :password_confirmation, class: 'input-field', placeholder: "Verifique contraseña", required: "" %>
      <hr/>
      <p>You must enter your current password to make changes.</p>
      <%= f.password_field :current_password, class: 'input-field', placeholder: "Contraseña actual", required: "" %>
    <%= f.submit 'Modificar', :class => 'btn btn-login' %>
  <% end %>
          <br/>
          <br/>
          <hr/>
        <h3>Cancelar cuenta</h3>
        <p style="text-align: center;">Es triste verlo partir</p>
        <%= button_to "Cancelar cuenta", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-login btn-reset' %>
        </div>
      </div>
    </div>
  </div>
</div>


