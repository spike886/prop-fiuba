<div class="container login-form-x" id="login-block" style="margin-top: -40px; margin-left: -20px; margin-bottom: -25px;">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-2">
      <div class="page-icon-shadow animated bounceInDown"> </div>
      <div class="login-box clearfix animated flipInY">
        <div class="page-icon animated bounceInDown">
          <i class="glyphicon glyphicon-pencil"></i>
        </div>
        <div class="login-logo">
          <%= link_to image_tag("logo-black.png"), root_path %>
        </div>
        <hr>
        <div class="login-form">
          <div class="alert alert-danger hide">
            <button type="button" class="close" data-dismiss="alert"> ×</button>
            <h4>Error!</h4>
            <%= devise_error_messages! %>
          </div>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
              <% if f.object.class == User %>
                  <%= f.text_field :name, :autofocus => true, class: 'input-field', placeholder: "Nombre completo", required: ""  %>
                  <%= f.text_field :phone, class: 'input-field', placeholder: "Telefono", required: ""  %>
              <% end %>
              <%= f.email_field :email, class: 'input-field', placeholder: "Correo electronico", required: ""  %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Esperando que confirme el correo electronico: <%= resource.unconfirmed_email %></p>
              <% end %>
              <hr/>
              <p>Deje estos campos en blanco si no desea cambiar su contraseña.</p>
              <%= f.password_field :password, :autocomplete => 'off', class: 'input-field', placeholder: "Nueva contraseña"  %>
              <%= f.password_field :password_confirmation, class: 'input-field', placeholder: "Verifique contraseña" %>
              <hr/>
              <p>You must enter your current password to make changes.</p>
              <%= f.password_field :current_password, class: 'input-field', placeholder: "Contraseña actual", required: "" %>
              <%= f.submit 'Modificar', :class => 'btn btn-login' %>
          <% end %>
          <br/>
          <br/>
          <hr/>
          <h4 style="text-align: center">Cancelar cuenta</h4>
          <p style="text-align: center;">Es triste verte partir</p>
          <%= button_to "Borrar mi cuenta", registration_path(resource_name), :data => { :confirm => "Estas seguro?" }, :method => :delete, :class => 'btn btn-login btn-reset' %>
        </div>
      </div>
    </div>
  </div>
</div>


