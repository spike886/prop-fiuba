<%- model_class = Publication -%>
<div class="panel-heading">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="panel-body">
<table class=" table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:operation_type) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:publication_type) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.operation_type %></td>
        <td><%= publication.property.try(:address) %></td>
        <td><%= state_tag publication.state %></td>
        <td><%= publication.start_date %></td>
        <td><%= publication.end_date %></td>
        <td><%= publication.publication_type.name %></td>
        <td>
          <%= link_to publication_path(publication), :class => 'btn btn-default btn-xs' do %>
              <%= status_button_tag publication.state %>
          <% end %>
          <%= link_to publication_path(publication), :class => 'btn btn-info btn-xs' do %>
              <i class="fa fa-info"></i>
          <% end %>
          <%= link_to publication_path(publication),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Estas seguro?')) },
                      :class => 'btn btn-xs btn-danger' do %>
              <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_publication_path,
            :class => 'btn btn-primary' %>
</div>
